<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<i class="fa-solid fa-trash-can"></i> <%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>

<i class="fa-solid fa-table-list"></i> <%= link_to "See all tasks", tasks_path %>
<i class="fa-solid fa-pen-to-square"></i> <%= link_to "Update a task", edit_task_path %>
